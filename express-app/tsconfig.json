{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "config",
    "controllers",
    "db",
    "middleware",
    "routers",
    "src",
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
